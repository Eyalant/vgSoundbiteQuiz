    <script type="text/babel" src="/public/js/gameCardsGrid.jsx"></script>
    <script type="text/babel" src="/public/js/scoreIcons.jsx"></script>
    <script type="text/babel" src="/public/js/confirmationModal.jsx"></script>
    <script type="text/babel" src="/public/js/summaryModal.jsx"></script>
    <script type="text/babel" src="/public/js/app.jsx"></script>
    <link href="/templates/index.css" rel="stylesheet">
</body>

